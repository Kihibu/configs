{
  "explorer.width": 30,
  "explorer.icon.enableNerdfont": true,
  "explorer.previewAction.onHover": false,
  "explorer.keyMappings": {
    "<cr>": ["expandable?", "expand", "open"],
    "v": "open:vsplit"
  },
  "languageserver": {
    "ccls": {
      "command": "/usr/bin/ccls",
      "filetypes": ["c", "cpp", "objc", "objcpp", "cu"],
      "rootPatterns": [
        ".ccls",
        "compile_commands.json",
        ".vim/",
        ".git/",
        ".hg/",
        "pyproject.toml",
        "pyrightconfig.json"
      ],
      "initializationOptions": {
        "cache": {
          "directory": "/tmp/ccls"
        }
      }
    }
  },
  "coc.preferences.rootPatterns": [
    ".git",
    ".hg",
    ".projections.json",
    "pyproject.toml",
    "pyrightconfig.json"
  ],
  "suggest.completionItemKindLabels": {
    "function": "ÔÇö",
    "method": "ÔÇö",
    "variable": "v",
    "constant": "Óà¨",
    "struct": "Ô≠Ñ",
    "class": "ùìí",
    "interface": "ÔÉ®",
    "text": "Ôùæ",
    "enum": "‚Ñ∞",
    "enumMember": "‚Ñ∞",
    "module": "Ôíá",
    "color": "Ô£ó",
    "property": "Óò§",
    "field": "Ôö¶",
    "unit": "Ô•¨",
    "file": "Ôúò",
    "value": "Ô¢ü",
    "event": "ÔÉß",
    "folder": "Ôùä",
    "keyword": "Ô†ä",
    "snippet": "Ôëè",
    "operator": "Ôöî",
    "reference": "ÔúÜ",
    "typeParameter": "ùôè",
    "default": ""
  },

  "suggest.defaultSortMethod": "length",

  "docthis.includeDescriptionTag": false,
  "docthis.includeTypes": false,
  "docthis.includeMemberOfOnClassMembers": false,

  "python.jediEnabled": true,
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,
  "python.analysis.diagnosticEnabled": true,

  "suggest.detailMaxLength": 50,
  "suggest.maxPreviewWidth": 35,
  "_comment": "Max number of lines in suggest window",
  "suggest.maxCompleteItemCount": 200,
  "_comment": "Max mumber of columns in suggest window (except type decl)",
  "suggest.labelMaxLength": 20,

  "rust-analyzer.rustfmt.enableRangeFormatting": true,
  "python.formatting.autopep8Args": ["-aa"],
  "python.analysis.autoImportCompletions": true,

  "python.linting.flake8Enabled": false,
  "go.goplsOptions": {"gofumpt": true},

  "prettier.tabWidth": 2,
  "coc.preferences.formatOnSaveFiletypes": ["rust"],
  "css.lint.unknownAtRules": "ignore",
  "_tailwindCSS.lint.invalidTailwindDirective": "ignore"
}

